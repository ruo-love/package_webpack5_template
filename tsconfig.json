{
  "compilerOptions": {
    "target": "ESNEXT",
    "module": "ESNEXT",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "rootDir": "./src",
    "noEmitHelpers": true,
    "paths": {
      "@/*": ["src/*"],
      "@config/*": ["config/*"],
      "@package/*": ["src/package/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/*.ts",
    "src/**/**/*.ts",
    "src/**/**/*.test.ts",
    "index.d.ts",
    "type.d.ts"
  ],
  "exclude": ["node_modules"]
}
